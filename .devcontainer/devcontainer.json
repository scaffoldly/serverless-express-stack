{
  "name": "Stack",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb"
  },
  "appPort": [3000, 4566],
  "forwardPorts": [3000, 4566],
  "portsAttributes": {
    "3000": {
      "label": "serverless-offline"
    },
    "4566": {
      "label": "localstack"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "mounts": [],
  "containerEnv": {
    "DEBUG": "1",
    "NODE_ENV": "development",
    "NODE_OPTIONS": "--enable-source-maps",
    "LOCALSTACK_VOLUME_DIR": "${containerWorkspaceFolder}/.cache",
    "LAMBDA_DOCKER_NETWORK": "bridge"
  },
  "remoteEnv": {},
  "onCreateCommand": {
    "installDependencies": "yarn"
  },
  "updateContentCommand": {
    "startLocalstack": "/usr/bin/supervisord -c /etc/supervisor/supervisord.conf -s || true"
  },
  "postCreateCommand": {
    "setupPorts": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME || true"
  },
  "postAttachCommand": {
    "start": "yarn start"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "dbaeumer.vscode-eslint"],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "always"
        },
        "[html]": {
          "editor.defaultFormatter": "vscode.html-language-features"
        },
        "editor.formatOnSave": true,
        "eslint.lintTask.enable": true,
        "eslint.validate": ["javascript", "typescript"],
        "git.autofetch": true,
        "task.allowAutomaticTasks": "on",
        "prettier.prettierPath": "/node_modules/prettier",
        "typescript.tsdk": "/node_modules/typescript/lib",
        "typescript.tsserver.maxTsServerMemory": 1024,
        "typescript.preferences.importModuleSpecifier": "shortest",
        "extensions.experimental.deferredStartupFinishedActivation": true
      }
    }
  }
}
