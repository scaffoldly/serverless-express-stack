{
  "name": "Stack",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/scaffoldly/devcontainer-features/aws-serverless-express:1": {
      "publicPorts": "4000"
    }
  },
  "remoteEnv": {
    "PATH": "${containerWorkspaceFolder}/node_modules/.bin:${containerEnv:PATH}"
  },
  "remoteUser": "root",
  "hostRequirements": {
    "cpus": 4
  },
  "appPort": [4000, 4566],
  "forwardPorts": [4000, 4566],
  "portsAttributes": {
    "4000": {
      "label": "serverless-offline"
      // "onAutoForward": "openPreview"
    },
    "4566": {
      "label": "localstack"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "waitFor": "onCreateCommand",
  "onCreateCommand": "yarn install",
  "updateContentCommand": "",
  "postCreateCommand": "",
  "postAttachCommand": {
    // "server": "yarn start"
  },
  "customizations": {
    "codespaces": {
      "repositories": {
        "scaffoldly/*": {
          "permissions": "write-all"
        }
      }
    }
  }
}
