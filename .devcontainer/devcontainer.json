{
  "name": "Stack",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "root",
  "hostRequirements": {
    "cpus": 4,
    "memory": "16gb"
  },
  "forwardPorts": [3000, 4566],
  "portsAttributes": {
    "3000": {
      "label": "serverless-offline"
    },
    "4566": {
      "label": "localstack"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "mounts": [],
  "containerEnv": {
    "DEBUG": "1",
    "NODE_ENV": "local",
    "LOCALSTACK_VOLUME_DIR": "${containerWorkspaceFolder}/.cache",
    "LAMBDA_DOCKER_NETWORK": "bridge"
  },
  "remoteEnv": {},
  "waitFor": "onCreateCommand",
  // "updateContentCommand": "yarn",
  // "postAttachCommand": {
  //   "setupPorts": "gh codespace ports visibility 3000:public -c $CODESPACE_NAME && exit",
  //   "startLocalstack": "/usr/bin/supervisord -c /etc/supervisor/supervisord.conf -s && exit"
  // },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "dbaeumer.vscode-eslint"],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[html]": {
          "editor.defaultFormatter": "vscode.html-language-features"
        },
        "editor.formatOnSave": true,
        "eslint.lintTask.enable": true,
        "git.autofetch": true,
        // "javascript.format.enable": false,
        "prettier.prettierPath": "./node_modules/prettier",
        "task.allowAutomaticTasks": "on",
        "typescript.tsdk": "./node_modules/typescript/lib",
        // "typescript.tsserver.maxTsServerMemory": 512,
        "typescript.preferences.importModuleSpecifier": "relative",
        "extensions.experimental.deferredStartupFinishedActivation": true
        // "typescript.format.enable": false,
        // "eslint.format.enable": true,
        // "eslint.workingDirectories": [
        //   {
        //     "mode": "auto"
        //   }
        // ],
        // "eslint.validate": ["javascript", "typescript"]
      }
    }
  }
}
