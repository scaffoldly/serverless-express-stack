{
  "name": "Stack",
  "image": "ghcr.io/scaffoldly/aws-localstack:3.1.0-node20",
  "privileged": true,
  "remoteUser": "root",
  "hostRequirements": {
    "cpus": 4
  },
  "appPort": [3000, 4566],
  "forwardPorts": [3000, 4566],
  "portsAttributes": {
    "3000": {
      "label": "serverless-offline",
      "onAutoForward": "openPreview"
    },
    "4566": {
      "label": "localstack"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "containerEnv": {
    "NODE_ENV": "development",
    "LOCALSTACK_VOLUME_DIR": "${containerWorkspaceFolder}/.cache",
    "LAMBDA_DOCKER_NETWORK": "bridge",
    "LOCALSTACK_ENDPOINT": "https://${localEnv:CODESPACE_NAME}-4566.${localEnv:GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}"
  },
  "waitFor": "onCreateCommand",
  "onCreateCommand": "yarn install",
  "updateContentCommand": "restart supervisor",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "yarn start"
  },
  "features": {
    "ghcr.io/scaffoldly/devcontainer-features/aws-serverless-express:1": {}
  }
}
